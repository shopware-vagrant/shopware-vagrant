[global]
error_log = /var/log/php7.0/fpm-error.log

[vagrant]
listen = /var/run/php-fpm-vagrant.socket
listen.backlog = -1
listen.owner = vagrant
listen.group = www-data
listen.mode=0660
user = vagrant
group = vagrant
request_slowlog_timeout = 5s
slowlog = /var/log/php7.0/slow.log
pm = dynamic
pm.max_children = 75
pm.start_servers = 10
pm.min_spare_servers = 5
pm.max_spare_servers = 20
pm.max_requests = 500
pm.status_path = /status
request_terminate_timeout = 600s
rlimit_files = 131072
rlimit_core = unlimited
catch_workers_output = yes
env[HOSTNAME] = $HOSTNAME
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp
php_admin_value[error_log] = /var/log/php7.0/error.log
php_admin_flag[log_errors] = on
